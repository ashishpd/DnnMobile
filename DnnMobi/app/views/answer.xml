<Alloy>
    <Window class="container" exitOnClose="true" id="winAnswer">
        <Toolbar borderBottom="false" borderTop="true" bottom="0" platform="ios">
            <!-- The Items tag sets the Toolbar.items property. -->
            <Items>
                <Button id="back" onClick="doBack" title="Back"/>
            </Items>
            <!-- Place additional views for the Toolbar here. -->
        </Toolbar>
        <View id="mainView">
            <View id="titleRow">
                <Label id="title"/>
                <View class="line"/>
            </View>
            <View id="authorRow">
                <ImageView id="profilePic"/>
                <Label id="author"/>
                <Label id="when"/>
                <Label id="answerCount"/>
            </View>
            <View id="votesRow">
                <Label id="score"/>
                <Button id="upQ" onClick="doVoteQ" title="Up"/>
                <Button id="downQ" onClick="doVoteQ" title="Down"/>
            </View>
            <View id="summaryRow">
                <View class="line"/>
                <WebView id="body" scalesPageToFit="true"/>
            </View>
            <View id="answersTitleRow">
                <View class="line"/>
                <Label text="Answers"/>
                <View class="line"/>
            </View>
            <View id="answersRow">
                ss
            </View> 
        </View>
        <TextField id="txtTitle"/>
        <Label>Question</Label>
        <TextArea id="txtQuestion"/>
        <Label>Tags</Label>
        <TextField hintText="Enter tags separated by a comma" id="txtTags"/>
        <Label id="txtError"/>
        <ActivityIndicator id="activityIndicator" message="Posting.." style="Ti.UI.iPhone.ActivityIndicatorStyle.DARK"/>
    </Window>
</Alloy>