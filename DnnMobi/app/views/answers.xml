<Alloy>
	<Window class="mainTab" id="winAnswers" title="Answers" >
		<ActivityIndicator id="activityIndicator" style="Ti.UI.iPhone.ActivityIndicatorStyle.DARK" />
		<ListView id="listView" defaultItemTemplate="template">
			<HeaderView>
                <View height="Ti.UI.SIZE">
                    <Button id="btnRefresh" onClick="doRefresh" title="Refresh" />
                    <Button id="btnNew" onClick="doNew" title="Ask a Question" />
                </View>>
            </HeaderView>
            <Templates>
                <ItemTemplate name="template">
                	<Label bindId="votes" id="votesCount" />   
                	<Label id="votesCaption">Votes</Label>                    
                    <Label bindId="answers" id="answersCount" />
                    <Label id="answersCaption">Answers</Label>                                
                    <Label bindId="title" id="title" />
                    <Label bindId="when" id="when" />
                    <Label bindId="message" id="message" />	                                       
                </ItemTemplate>
            </Templates>
            <ListSection>
            </ListSection>
            <FooterView>
                <View>
		            <Button id="btnLoadMore" onClick="doLoadMore" title="Load More" visible="false" />
		            <Label id="txtError"></Label>
                </View>
            </FooterView>
        </ListView>
	</Window>
</Alloy>