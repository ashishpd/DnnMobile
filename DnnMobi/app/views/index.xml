<Alloy>
	<Collection src="site">
	<Window id="winLogin" class="container" exitOnClose="true">

		
		<Label>Site</Label>>
		<TextField id="txtSiteName">www.ashprasad.com</TextField>
		<Label>User</Label>>
		<TextField id="txtUserName" hintText="username"></TextField>
		<Label>Password</Label>>
		<TextField id="txtPassword" hintText="password" passwordMask="true"></TextField>
		<Button id="btnLogin" onClick="doLogin" title="Login" />
		<Label id="txtError"></Label>
		
		
		
		<RightNavButton platform="ios">
			<Button>Add</Button>
		</RightNavButton>

		<Label>Previously Visited</Label>>
		<TableView dataCollection="site" dataTransform="transformFunction">
			<TableViewRow title="{customproperty}" class="{customproperty}"/>
		</TableView>	

		
	</Window>
</Alloy>