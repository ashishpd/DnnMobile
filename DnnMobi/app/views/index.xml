<Alloy>
	<Window id="winLogin" class="container" exitOnClose="true">
		<Label visible="false">Your Sites</Label>
		<Picker id="pickerSites" selectionIndicator="true" useSpinner="true" onChange="doSelectSite">
            <PickerColumn id="columnSite">
            </PickerColumn>
        </Picker>		
		<ActivityIndicator id="activityIndicator" message="Logging In..." style="Ti.UI.iPhone.ActivityIndicatorStyle.DARK" />        
		<Label>Site</Label>
		<TextField id="txtSiteName">www.ashprasad.com</TextField>
		<Label>User</Label>
		<TextField id="txtUserName" hintText="username"></TextField>
		<Label>Password</Label>
		<TextField id="txtPassword" hintText="password" passwordMask="true"></TextField>
		<View id="buttonStrip">			
			<Button id="btnLogin" onClick="doLogin" title="Login" />
			<Button id="btnSkip" onClick="doSkip" title="Skip" />
		</View>
		<Label id="txtError"></Label>
	</Window>
</Alloy>