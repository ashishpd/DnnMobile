<Alloy>
	<Window id="winLogin" class="container" exitOnClose="true">
		<Label>Site</Label>>
		<TextField id="txtSiteName">www.ashprasad.com</TextField>
		<Label>User</Label>>
		<TextField id="txtUserName" hintText="username"></TextField>
		<Label>Password</Label>>
		<TextField id="txtPassword" hintText="password" passwordMask="true"></TextField>
		<Button id="btnLogin" onClick="doLogin" title="Login" />
		<Label id="txtError"></Label>
		
        <Toolbar platform="ios" bottom="0" borderTop="true" borderBottom="false">

            <!-- The Items tag sets the Toolbar.items property. -->
            <Items>
                <Button id="send" title="Send" style="Ti.UI.iPhone.SystemButtonStyle.DONE" />
                <FlexSpace/>
                <Button id="camera" systemButton="Ti.UI.iPhone.SystemButton.CAMERA" />
                <FlexSpace/>
                <Button id="cancel" systemButton="Ti.UI.iPhone.SystemButton.CANCEL" />
            </Items>

            <!-- Place additional views for the Toolbar here. -->

        </Toolbar>		
		
	</Window>
</Alloy>